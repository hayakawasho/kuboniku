---
import Home from '../_components/page.home/index.view';
import { createWorksRepository } from '../_repositories/works/index';
import Layout from '../layout.astro';

const repo = createWorksRepository();
const result = await repo.findMany({
  order: "desc",
  per_page: 10,
});

---

<Layout title="" permalink='' namespace='home'>
  <Home posts={result.works} namespace='home' perPage={result.works.length} />
</Layout>
