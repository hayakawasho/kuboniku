---
import { mq } from '../../_foundation/mq';
import { cloudinaryAPIConverter } from '../../_foundation/converter';
import WorksDetail from '../../_components/page.works-single/index.view';
import { createWorksRepository } from '../../_repositories';
import Layout from '../../layout.astro';

const { slug } = Astro.params;
const { cookies } = Astro

const workRepo = createWorksRepository(cookies.get("token")?.value)
const result = await workRepo.findItem({
  slug: slug as string,
})

if (!result) {
  return new Response(null, {
    status: 404,
    statusText: "Not found"
  });
}

export const prerender = false;
---

<Layout title={result.work.title} permalink={`/work/${result.work.slug}/`} namespace="works-single">
  <link
    slot="prependHead"
    as="image"
    crossorigin="anonymous"
    href={cloudinaryAPIConverter(result.work.mv["pc"].url, "f_auto,q_auto,w_1680")}
    media={mq.pc}
    rel="preload"
  />
  <WorksDetail post={result.work} nextPost={result.work.next} projectNumber={result.work.index} namespace="works-single" />
</Layout>
