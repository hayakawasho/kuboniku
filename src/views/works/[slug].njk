---
pagination:
  data: wp.works.items
  size: 1
  alias: this
permalink: "/works/{{ this.slug }}/index.html"
layout: _layout.njk
namespace: WorksDetail
title: ""
---

{% set index = (wp.works.total - pagination.pageNumber) | zeroPadding("2") %}
{%
  set next = {
    title: pagination.page.first.title if pagination.page.last.id === this.id else pagination.page.next.title | safe,
    slug: pagination.page.first.slug if pagination.page.last.id === this.id else pagination.page.next.slug,
    eyecatch: pagination.page.first.eyecatch if pagination.page.last.id === this.id else pagination.page.next.eyecatch,
    eyecatchMobile: pagination.page.first.eyecatchMobile if pagination.page.last.id === this.id else pagination.page.next.eyecatchMobile
  }
%}

<div class="worksdetail-kv" data-component="Skewscroll">
  {% image
    this.eyecatch.src,
    "absolute w-full h-full object-cover opacity-[.6]",
    "",
    "jpeg"
  %}
  {#% image
    props.eyecatch.sp.srcset,
    "u-sp absolute w-full h-full object-cover opacity-[.6]",
    "",
    "jpeg"
  %#}

  <div class="absolute top-1/2 left-[1rem] pl-[var(--grid)]">
    <div class="relative">
      <p class="font-en font-bold text-[1.3rem] text-[#e3e3e3] tracking-[-.02em] absolute top-[-2.8rem] left-[-1em]" data-skew>
        {{ index }}
        <span class="text-[70%] tracking-[.02em]">Project</span>
      </p>
      <h1 class="font-roboto text-[3.9rem] pr-[.5em] text-[#fff]">
        {{ this.title | safe }}
      </h1>
      <p class="text-[#939393] font-roboto text-[1.3rem] tracking-[.02em] mt-[1rem]">
        {{ this.category }}
        <i class="icon-arrow_right | text-[1rem] inline-block transform scale-70"></i>
      </p>
    </div>
  </div>

  <div class="absolute bottom-[10rem] left-1/2 overflow-hidden transform translate-x-[-50%] translate-y-[100%]">
    <div class="u-in overflow-hidden">
      <div class="wkslug-kv__scrollLabel | font-en font-bold text-[1rem] tracking-[.02em]">scroll</div>
    </div>
    <i class="icon-arrow_down | block mt-[1.4rem] text-[1.2rem] text-center"></i>
  </div>
</div>

<div class="px-[3rem] pt-[6rem] pb-[10rem]">
  <div class="worksdetail-content | sm:mx-auto">
    <div class="mb-[6rem]
    | sm:sticky sm:top-1/2 sm:mb-0"
    >
      <p class="u-pc | font-en font-medium text-[1.3rem] text-[#e3e3e3] tracking-[.02em] mb-[1em]">Project</p>
      <h2 class="u-pc | font-roboto text-[3.2rem] text-[#fff] mb-[5rem]">
        {{ this.title | safe }}
      </h2>
      <dl class="font-roboto text-[1.2rem] mb-[3rem] | u-cf">
        <dt class="float-left mr-[.5em] text-[#858585]">Year :</dt>
        <dd class="mb-[1.2rem] font-light text-[#cbcbcb] tracking-[.08em]">
          <time datetime='{{ this.createAt | day("yyyy-MM-dd") }}'>
            {{ this.createAt | day("MMMM d, yyyy") }}
          </time>
        </dd>
        <dt class="float-left mr-[.5em] text-[#858585]">Role :</dt>
        <dd class="uppercase font-light text-[#cbcbcb] tracking-[.08em]">
          {% for i in this.role %}
            {{ i }}{% if loop.last === false %} / {% endif %}
          {% endfor %}
        </dd>
      </dl>

      {% if this.siteUrl %}
        <a
          class="worksdetail-viewWebsite
          | font-en font-bold text-[1.2rem] tracking-[.02em]"
          href="{{ this.siteUrl }}"
          target="_blank"
          rel="noopener"
        >
          View website
          <div class="worksdetail-viewWebsite__hr"></div>
        </a>
      {% endif %}
    </div>
    {% if this.gallery.length %}
      <ul class="mx-[-1.5rem]">
        {% for i in this.gallery %}
          <li class="mb-[2rem]">
            {% image
              i.src,
              "",
              "",
              "jpeg"
            %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>

<aside class="worksdetail-kv | h-screen">
  <a class="" href="../{{ next.slug }}/">
    {% image
      next.eyecatch.src,
      "absolute w-full h-full object-cover filter grayscale opacity-[.6]",
      "",
      "jpeg"
    %}
    {#% image
      next.eyecatchMobile.src,
      "absolute w-full h-full object-cover filter grayscale opacity-[.6]",
      "",
      "jpeg"
    %#}

    <div class="absolute top-1/2 left-[1rem] pl-[var(--grid)]">
      <h2 class="font-roboto text-[3.9rem] pr-[.5em] text-[#fff]">
        Next Project
      </h2>
      <p class="text-[#939393] font-roboto text-[1.3rem] tracking-[.02em] mt-[1rem]">
        {{ next.title }}
        <i class="icon-arrow_right
        | text-[1rem] inline-block transform scale-70"
        ></i>
      </p>
    </div>
  </a>
</aside>
