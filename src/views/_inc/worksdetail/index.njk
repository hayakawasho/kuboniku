<div class="worksdetail-kv">
  <picture>
    <source
      media="(max-width: 639px)"
      srcset="{{ props.eyecatch.sp.srcset }}"
      width="{{ props.eyecatch.sp.width }}"
      height="{{ props.eyecatch.sp.height }}"
    >
    <img
      class="absolute w-full h-full object-cover opacity-[.6]"
      src="{{ props.eyecatch.pc.src }}"
      srcset="{{ props.eyecatch.pc.srcset }}"
      alt=""
      decoding="async"
      importance="high"
      width="{{ props.eyecatch.pc.width }}"
      height="{{ props.eyecatch.pc.height }}"
    />
  </picture>

  <div class="absolute top-1/2 left-[1rem] pl-[var(--grid)]">
    <div class="relative">
      <p class="font-en font-bold text-[1.3rem] text-[#e3e3e3] tracking-[-.02em] absolute top-[-2.8rem] left-[-1em]">
        {{ props.num }}
        <span class="text-[70%] tracking-[.02em]">Project</span>
      </p>
      <h1 class="font-roboto text-[3.9rem] pr-[.5em] text-[#fff]">
        {{ props.title }}
      </h1>
      <p class="text-[#939393] font-roboto text-[1.3rem] tracking-[.02em] mt-[1rem]">
        {{ props.category }}
        <i class="icon-arrow_right | text-[1rem] inline-block transform scale-70"></i>
      </p>
    </div>
  </div>

  <div class="absolute bottom-[10rem] left-1/2 overflow-hidden transform translate-x-[-50%] translate-y-[100%]">
    <div class="u-in overflow-hidden">
      <div class="wkslug-kv__scrollLabel | font-en font-bold text-[1rem] tracking-[.02em]">scroll</div>
    </div>
    <i class="icon-arrow_down | block mt-[1.4rem] text-[1.2rem] text-center"></i>
  </div>
</div>

<div class="px-[3rem] pt-[6rem] pb-[10rem]">
  <div class="worksdetail-content | sm:mx-auto">
    <div class="mb-[6rem] | sm:sticky sm:top-1/2 sm:mb-0">
      <p class="u-pc | font-en font-medium text-[1.3rem] text-[#e3e3e3] tracking-[.02em] mb-[1em]">Project</p>
      <h2 class="u-pc | font-roboto text-[3.2rem] text-[#fff] mb-[5rem]">{{ props.title }}</h2>
      <dl class="font-roboto text-[1.2rem] mb-[3rem] | u-cf">
        <dt class="float-left mr-[.5em] text-[#858585]">Year :</dt>
        <dd class="mb-[1.2rem] font-light text-[#cbcbcb] tracking-[.08em]">
          <time datetime="{{ props.createAt.datetime }}">{{ props.createAt.format }}</time>
        </dd>
        <dt class="float-left mr-[.5em] text-[#858585]">Role :</dt>
        <dd class="uppercase font-light text-[#cbcbcb] tracking-[.08em]">{% for i in props.role %}
          {{ i }}{% if loop.last === false %} / {% endif %}
        {% endfor %}
        </dd>
      </dl>

      {% if props.siteUrl %}
        <a
          class="worksdetail-viewWebsite | font-en font-bold text-[1.2rem] tracking-[.02em] | text-[1.4rem]"
          href="{{ props.siteUrl }}"
          target="_blank"
          rel="noopener"
        >
          View website
          <div class="worksdetail-viewWebsite__hr"></div>
        </a>
      {% endif %}
    </div>
    {% if props.gallery.length %}
      <ul class="">
        {% for i in props.gallery %}
          <li class="mb-[2rem]">
            <img
              class="lazyload"
              data-src="{{ i.src }}"
              data-srcset="{{ i.srcset }}"
              width="{{ i.width }}"
              height="{{ i.height }}"
              alt=""
              decoding="async"
            />
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>

<aside class="worksdetail-kv | h-screen">
  <a class="" href="../{{ props.next.slug }}/">
    <picture>
      <source
        media="(max-width: 639px)"
        data-srcset="{{ props.next.eyecatch.sp.srcset }}"
        width="{{ props.next.eyecatch.sp.width }}"
        height="{{ props.next.eyecatch.sp.height }}"
      >
      <img
        class="lazyload | absolute w-full h-full object-cover filter grayscale opacity-[.6]"
        data-src="{{ props.next.eyecatch.pc.src }}"
        data-srcset="{{ props.next.eyecatch.pc.srcset }}"
        alt=""
        decoding="async"
        width="{{ props.next.eyecatch.pc.width }}"
        height="{{ props.next.eyecatch.pc.height }}"
      />
    </picture>

    <div class="absolute top-1/2 left-[1rem] pl-[var(--grid)]">
      <h2 class="font-roboto text-[3.9rem] pr-[.5em] text-[#fff]">
        Next Project
      </h2>
      <p class="text-[#939393] font-roboto text-[1.3rem] tracking-[.02em] mt-[1rem]">
        {{ props.next.title }}
        <i class="icon-arrow_right | text-[1rem] inline-block transform scale-70"></i>
      </p>
    </div>
  </a>
</aside>
