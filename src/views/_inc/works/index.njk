<div class="o-wrap">
  <h1 class="works-heading | relative mt-[10rem] mb-[6rem]">
    Works
    <sup class="absolute top-[0.5em] ml-[0.5em]">{{ props.total }}</sup>
  </h1>
  <div class="o-grid | js-works | pb-[2rem]" data-total="{{ props.total }}">
  {% for i in props.entries %}
    {%
      set j = {
        tilte: i.title | safe,
        slug: i.slug,
        src: i.eyecatch.pc.src,
        width: i.eyecatch.pc.width,
        height: i.eyecatch.pc.height,
        num: (props.total - loop.index0) | zeroPadding("2")
      }
    %}
    {% include './_entry.njk' %}
  {% endfor %}
  </div>
</div>
