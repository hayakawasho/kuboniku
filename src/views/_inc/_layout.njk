{% set metaTitle =  title + " | " + conf.siteName if title else conf.siteName %}
{% set ogType = 'website' if namespace == 'home' else 'article' %}
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no" />
    <meta http-equiv="Content-Type" content="text/html" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{{ metaTitle }}</title>
    <meta name="description" content="{{ conf.metaDescription }}" />
    <meta property="og:type" content="{{ ogType }}" />
    <meta property="og:title" content="{{ metaTitle }}" />
    <meta property="og:description" content="{{ conf.metaDescription }}" />
    <meta property="og:image" content="{{ conf.baseUrl }}/ogp.jpg" />
    <meta property="og:site_name" content="{{ conf.siteName }}" />
    <meta name="twitter:title" content="{{ metaTitle }}" />
    <meta name="twitter:description" content="{{ conf.metaDescription }}" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&family=Noto+Sans+JP:wght@400;700&family=Roboto+Condensed:wght@300;400;700&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <style>
      body {
        color: #e3e3e3;
        background: #191918;
      }

      img {
        max-width: 100%;
        height: auto;
        vertical-align: middle;
      }

      img.lazyload:not([src]) {
        visibility: hidden;
      }
    </style>
    <script>
      window.__KUBONIKU__ = window.__KUBONIKU__ || {};
      window.__KUBONIKU__.bootstart = performance.now();
    </script>
    {% if conf.env == "production" %}
      {% viteLinkStylesheetTags "src/entry.ts" %}
      {% viteLinkModulePreloadTags "src/entry.ts" %}
    {% endif %}
    <script src="https://polyfill.io/v3/polyfill.min.js?features=MediaQueryList.prototype.addEventListener%2CMediaQueryList.prototype.removeEventListener%2CString.prototype.padStart%2CIntersectionObserver%2CResizeObserver" defer></script>
    <script src="https://code.createjs.com/1.0.0/preloadjs.min.js" defer></script>
  </head>

  <body
    class="is-domLoading"
    data-page="{{ namespace }}"
    data-component="Menu"
  >

    <div class="l-mask" id="js-viewportRef"></div>

    <header class="l-fixed l-header">
      <a href="/" class="l-brandLogo">
        <i class="icon-logo"></i>
        <span class="sr-only">KuboNiku.com</span>
      </a>
      {% include './_burger.njk' %}
      {% include './_sns.njk' %}
      <small class="l-copyright">&copy; KuboNiku.com</small>
    </header>

    {% include './_nav.njk' %}

    <div class="l-window" data-router-wrapper>
      <div class="l-content" data-router-view="{{ namespace }}">
        <div class="l-content__h"></div>
        <main class="l-page">
          {{ content | safe }}
        </main>
      </div>
    </div>

    <div data-component="GLWorld"></div>

    {% if conf.env == "production" %}
      {% viteScriptTag "src/entry.ts" %}
    {% else %}
      <script type="module" src="http://localhost:3000/src/entry.ts" defer></script>
    {% endif %}
  </body>
</html>
